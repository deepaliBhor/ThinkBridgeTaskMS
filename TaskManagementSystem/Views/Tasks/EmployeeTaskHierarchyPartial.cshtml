@model TaskManagementSystem.Models.EmployeeTaskHierarchyViewModel

    <h2>@Model.Employee.SName (@Model.Employee.SEmail)</h2>

    @if (Model.Tasks.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Due Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in Model.Tasks)
                {
                    <tr>
                        <td>@task.STitle</td>
                        <td>@task.SDescription</td>
                        <td>@task.DtDueDate.ToString("yyyy-MM-dd")</td>
                        <td>@task.SStatus</td>
                    </tr>
                }
            </tbody>
        </table>
    }

    @if (Model.Subordinates.Any())
    {
        <div style="margin-left: 20px;">
            @foreach (var subordinate in Model.Subordinates)
            {
                @Html.Partial("EmployeeTaskHierarchyPartial", subordinate)
            }
        </div>
    }


